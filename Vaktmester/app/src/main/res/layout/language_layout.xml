<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue">

    <TextView
        android:id="@+id/textViewChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="91dp"
        android:width="156dp"
        android:height="64dp"
        android:gravity="center"
        android:text="@string/language_text_view_choose"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold" />

        <ImageView android:id="@+id/imageViewGlobe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noun_1642355_cc"
            android:layout_below="@+id/textViewChoose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"/>


    <FrameLayout android:id="@+id/frameLayout"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/imageViewGlobe"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundspinner"
        android:padding="3dp">

        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white">
        </Spinner>

    </FrameLayout>
    
    <Button android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@drawable/roundbutton"
        android:text="@string/button_confirm"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48.5dp"/>


</RelativeLayout>