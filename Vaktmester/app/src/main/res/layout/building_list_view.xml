<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Blue"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/imageViewBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buildings_text_view"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="26dp">

        <EditText android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/edit_text_gray_border"
            android:hint="@string/buildings_search_edit_text"
            android:textColorHint="@color/BorderGray"
            android:padding="13dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/blueGrayish"
            android:cursorVisible="false"/>

        <ImageView android:id="@+id/imageViewSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:padding="6dp"/>

    </FrameLayout>

    <ListView android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:divider="@color/blueGrayish"
        android:dividerHeight="1sp"></ListView>



</LinearLayout>